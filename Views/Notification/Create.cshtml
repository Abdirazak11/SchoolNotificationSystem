<!-- Views/Notification/Create.cshtml -->
@model SchoolNotificationSystem.Models.ViewModels.CreateNotificationViewModel
@{
    ViewData["Title"] = "Create Notification";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">📝 Create New Notification</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label">Select Student *</label>
                            <select asp-for="StudentId" class="form-select form-select-lg" asp-items="ViewBag.Students">
                                <option value="">-- Choose a student --</option>
                            </select>
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Notification Type *</label>
                            <select asp-for="Type" class="form-select form-select-lg" asp-items="ViewBag.NotificationTypes">
                                <option value="">-- Select type --</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>

                            @if (User.IsInRole("Teacher"))
                            {
                            <small class="form-text text-muted">
                                💡 Teachers can send Attendance and Academic notifications
                            </small>
                            }
                            else
                            {
                            <small class="form-text text-muted">
                                💡 Office can send Administrative and Health notifications
                            </small>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title *</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="e.g., Attendance - Present Today" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">Message *</label>
                            <textarea asp-for="Message" class="form-control" rows="6"
                                      placeholder="Write your notification message here..."></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            @if (User.IsInRole("Teacher"))
                            {
                            <a asp-controller="Home" asp-action="TeacherDashboard" class="btn btn-secondary btn-lg">Cancel</a>
                            }
                            else
                            {
                            <a asp-controller="Home" asp-action="OfficeDashboard" class="btn btn-secondary btn-lg">Cancel</a>
                            }
                            <button type="submit" class="btn btn-success btn-lg">
                                ✉️ Send Notification
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Tips Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">💡 Quick Tips:</h6>
                    <ul class="mb-0">
                        <li><strong>Attendance:</strong> "Present today" or "Absent - sick leave"</li>
                        <li><strong>Academic:</strong> Include exam scores, totals, and average</li>
                        <li><strong>Administrative:</strong> School events, holidays, fee reminders</li>
                        <li><strong>Health:</strong> Medical updates or health-related information</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

