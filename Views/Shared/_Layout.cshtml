<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School Notification System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">🏫 School Notification System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Teacher"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="TeacherDashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Notification" asp-action="Create">Create Notification</a>
                                </li>
                            }
                            else if (User.IsInRole("Office"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="OfficeDashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="ManageStudents">Manage Students</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Notification" asp-action="Create">Create Notification</a>
                                </li>
                            }
                            else if (User.IsInRole("Parent"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="ParentDashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Notification" asp-action="List">My Notifications</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container text-center py-3">
            &copy; 2024 - School Notification System
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>