@model SchoolNotificationSystem.Models.ViewModels.ManageStudentsViewModel
@{
    ViewData["Title"] = "Manage Students";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>👨‍🎓 Manage Students</h2>
            <p class="text-muted">View and manage all students by grade</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="RegisterParent" class="btn btn-success btn-lg">
                ➕ Register New Parent & Student
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalStudents</h3>
                    <p class="mb-0">Total Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalGrades</h3>
                    <p class="mb-0">Total Grades</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.StudentsByGrade != null && Model.StudentsByGrade.Any())
    {
        foreach (var gradeGroup in Model.StudentsByGrade.OrderBy(g => g.Key))
        {
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">📚 @gradeGroup.Key (@gradeGroup.Value.Count students)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Parent Name</th>
                            <th>Parent Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in gradeGroup.Value)
                                {
                        <tr>
                            <td><strong>@student.Name</strong></td>
                            <td>@student.Parent.FullName</td>
                            <td>@student.Parent.Email</td>
                            <td>
                                <a asp-controller="Notification" asp-action="Create" class="btn btn-sm btn-primary">
                                    📝 Send Notification
                                </a>
                                <a asp-action="DeleteStudent" asp-route-id="@student.Id" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this student?')">
                                    🗑️ Delete
                                </a>
                            </td>
                        </tr>
                                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
        }
    }
    else
    {
    <div class="alert alert-info">
        <h4>No students registered yet!</h4>
        <p>Click the "Register New Parent & Student" button to add your first student.</p>
    </div>
    }

    <div class="text-center mt-4">
        <a asp-action="OfficeDashboard" class="btn btn-secondary btn-lg">← Back to Dashboard</a>
    </div>
</div>