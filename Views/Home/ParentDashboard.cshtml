@model IEnumerable<SchoolNotificationSystem.Models.Notification>
    @{
    ViewData["Title"] = "Parent Dashboard";
    }

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-12">
                <h2>👨‍👩‍👧 Welcome, @ViewBag.UserName</h2>
                <p class="text-muted">View your child's notifications</p>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h4>Student: @ViewBag.StudentName</h4>
                        <p class="mb-0">Your Child</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h3>@ViewBag.TotalNotifications</h3>
                        <p class="mb-0">Total Notifications</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Recent Notifications</h5>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
            {
                @foreach (var notification in Model)
                {
                <div class="card mb-3 border-start border-5 @(notification.Type == "Attendance" ? "border-success" : notification.Type == "Academic" ? "border-primary" : "border-warning")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title">@notification.Title</h5>
                                <p class="card-text">@notification.Message</p>
                                <small class="text-muted">
                                    📅 @notification.CreatedDate.ToString("dd MMMM yyyy, hh:mm tt") |
                                    👤 @notification.CreatedBy
                                </small>
                            </div>
                            <span class="badge bg-secondary">@notification.Type</span>
                        </div>
                    </div>
                </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <p class="mb-0">No notifications available at the moment.</p>
                </div>
            }
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-controller="Notification" asp-action="List" class="btn btn-primary">View All Notifications</a>
        </div>
    </div>
